#!/bin/bash
#first install all dependencies
npm install
./node_modules/.bin/bower install

#installs a google webfont for local use and serving
./node_modules/webfont-dl/bin/webfont-dl \
  http://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700 \
  --font-out=src/font \
  --out src/css/font.styl \
  --css-rel=/font
